<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mis Preferencias</h1>
    </div>
    <div class="row">
        <div class="cardCompleta shadow mb-4">
            <div class="card-header py-3 d-flex">
                <h6 class="m-0 font-weight-bold text-primary">Mis preferencias</h6>
                <div class="ml-auto">
                        <a href="{{ path('preferencia_create') }}"
                           class="btn btn-success btn-sm">
                            <i class="fas fa-plus fa-fw"></i> Añadir Preferencias
                        </a>
                </div>
            </div>
            <div class="card-body">
                {% if preferencias is  not empty %}
                    <ul id="listadoPreferencias" class="list-columns">
                    {% for preferencia in preferencias %}
                        <li>
                            {{ preferencia.categoria.nombre }}
                            <a href="{{ path('preferencia_delete', {"preferenciaId": preferencia.id}) }}"
                               class="ml-2">
                                <i class="fas fa-trash"></i>
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                {% else %}
                    <p>Aún no tienes ninguna preferencia, pruébelo.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
