<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mis Preferencias</h1>
    </div>
    <div class="row">
        <div class="cardCompleta shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Mis preferencias</h6>
            </div>
            <div class="card-body">
                {% if preferencias is  not empty %}
                    <ul class="list-columns">
                    {% for preferencia in preferencias %}
                        <li>{{ preferencia.categoria.nombre }}</li>
                    {% endfor %}
                    </ul>
                {% else %}
                    <p>Aún no tienes ninguna preferencia, pruébelo.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
