<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Intercambio\Domain\Intercambio" table="intercambio">
        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <field name="objetoIntercambioId" type="integer" column="objetoIntercambio_id">
            <options>
                <option name="comment">El objeto que se intercambia</option>
            </options>
        </field>
        <field name="objetoIntercambiarId" type="integer" column="objetoIntercambiar_id">
            <options>
                <option name="comment">El objeto por el que se quiere intercambiar</option>
            </options>
        </field>
        <field name="fechaCreacion" type="datetime" column="fechaCreacion" />
        <field name="fechaActualizacion" type="datetime" column="fechaActualizacion" />
        <field name="estado" type="smallint" column="estado" />
    </entity>

</doctrine-mapping>